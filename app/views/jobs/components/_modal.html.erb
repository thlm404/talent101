
<!-- Modal -->
<div class="modal fade" id="newSubjobModal" tabindex="-1" role="dialog" aria-labelledby="newSubjobModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content" style="height: 120%; width: 120%;">

      <div class="modal-header">
        <h5 class="modal-title" id="newSubjobModalLabel" style="font-size:3vh">New subjob</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>

      <div class="modal-body">
        <%= simple_form_for Subjob.new do |f| %>
          <div class="d-flex justify-content-between">
          </div>

          <div class="d-flex justify-content-between">
            <div style="width: 100%">
            <%= f.input :title %>
            </div>
          </div>

          <div class="d-flex justify-content-end">
            <%= f.button :submit, "Ajouter", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>

    </div>
  </div>
</div>

